<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Glass Colors -->
    <Color x:Key="GlassBackground">#E0FFFFFF</Color>
    <Color x:Key="GlassBorder">#40FFFFFF</Color>
    <Color x:Key="DarkBackground">#0F0F12</Color>
    <Color x:Key="AccentBlue">#0EA5FF</Color>
    <Color x:Key="AccentPink">#FF2D55</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#AAAABB</Color>

    <!-- Glass Card Style -->
    <Style x:Key="GlassCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="12,8"/>
    </Style>

    <!-- Glass Button Style -->
    <Style x:Key="GlassButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource AccentBlue}"/>
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Accent Button Style -->
    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentBlue}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Glass Entry Style -->
    <Style x:Key="GlassEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}"/>
    </Style>

    <!-- Glass Editor Style -->
    <Style x:Key="GlassEditor" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}"/>
    </Style>

    <!-- Primary Label Style -->
    <Style x:Key="PrimaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Secondary Label Style -->
    <Style x:Key="SecondaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Avatar Image Style -->
    <Style x:Key="AvatarImage" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
    </Style>

</ResourceDictionary>

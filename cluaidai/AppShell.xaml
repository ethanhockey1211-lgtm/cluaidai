<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="cluaidai.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:cluaidai.Views"
    Title="Norta"
    Shell.NavBarIsVisible="True">

    <TabBar>
        <ShellContent
            Title="Feed"
            Icon="feed.png"
            ContentTemplate="{DataTemplate views:MainFeedPage}"
            Route="MainFeed" />

        <ShellContent
            Title="Profile"
            Icon="profile.png"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="Profile" />

        <ShellContent
            Title="Messages"
            Icon="chat.png"
            ContentTemplate="{DataTemplate views:ChatPage}"
            Route="Chat" />
    </TabBar>

</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Glass Colors -->
    <Color x:Key="GlassBackground">#1AFFFFFF</Color>
    <Color x:Key="GlassBackgroundLight">#25FFFFFF</Color>
    <Color x:Key="GlassBorder">#30FFFFFF</Color>
    <Color x:Key="DarkBackground">#0F0F12</Color>
    <Color x:Key="DarkBackgroundLight">#1A1A1F</Color>
    <Color x:Key="AccentBlue">#0EA5FF</Color>
    <Color x:Key="AccentPink">#FF2D55</Color>
    <Color x:Key="AccentPurple">#9D4EDD</Color>
    <Color x:Key="AccentGreen">#06FFA5</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#AAAABB</Color>
    <Color x:Key="TextTertiary">#707085</Color>

    <!-- Glass Card Style -->
    <Style x:Key="GlassCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="12,8"/>
    </Style>

    <!-- Glass Card Light Style -->
    <Style x:Key="GlassCardLight" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackgroundLight}"/>
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- Glass Button Style -->
    <Style x:Key="GlassButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource AccentBlue}"/>
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Accent Button Style -->
    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentBlue}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Glass Entry Style -->
    <Style x:Key="GlassEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}"/>
    </Style>

    <!-- Glass Editor Style -->
    <Style x:Key="GlassEditor" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="{StaticResource GlassBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}"/>
    </Style>

    <!-- Primary Label Style -->
    <Style x:Key="PrimaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Secondary Label Style -->
    <Style x:Key="SecondaryLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Avatar Image Style -->
    <Style x:Key="AvatarImage" TargetType="Image">
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
    </Style>

    <!-- Gradient Button Style -->
    <Style x:Key="GradientButton" TargetType="Button">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Icon Button Style -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <!-- Badge Style -->
    <Style x:Key="BadgeLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

</ResourceDictionary>

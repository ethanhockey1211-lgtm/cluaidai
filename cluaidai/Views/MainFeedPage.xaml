<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:cluaidai.ViewModels"
             xmlns:models="clr-namespace:cluaidai.Models"
             x:Class="cluaidai.Views.MainFeedPage"
             x:DataType="vm:FeedViewModel"
             Title="Feed"
             BackgroundColor="{StaticResource DarkBackground}">

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <CollectionView ItemsSource="{Binding Posts}"
                       RemainingItemsThreshold="2"
                       RemainingItemsThresholdReachedCommand="{Binding LoadMorePostsCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Post">
                    <Frame Style="{StaticResource GlassCard}">
                        <Grid RowDefinitions="Auto,*,Auto,Auto" RowSpacing="12">

                            <!-- User Header -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Border StrokeShape="RoundRectangle 20"
                                       StrokeThickness="0"
                                       HeightRequest="40"
                                       WidthRequest="40">
                                    <Image Source="{Binding User.AvatarUrl}"
                                          Aspect="AspectFill"/>
                                </Border>

                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding User.DisplayName}"
                                          Style="{StaticResource PrimaryLabel}"
                                          FontAttributes="Bold"/>
                                    <Label Text="{Binding CreatedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                          Style="{StaticResource SecondaryLabel}"
                                          FontSize="12"/>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Post Image -->
                            <Border Grid.Row="1"
                                   StrokeShape="RoundRectangle 12"
                                   StrokeThickness="0"
                                   HeightRequest="300"
                                   IsVisible="{Binding ImageUrl, Converter={StaticResource IsNotNullOrEmptyConverter}}">
                                <Image Source="{Binding ImageUrl}"
                                      Aspect="AspectFill"/>
                            </Border>

                            <!-- Actions -->
                            <HorizontalStackLayout Grid.Row="2" Spacing="16">
                                <Button Text="{Binding IsLiked, Converter={StaticResource BoolToTextConverter}, ConverterParameter='â¤ï¸|ðŸ¤'}"
                                       Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FeedViewModel}}, Path=ToggleLikeCommand}"
                                       CommandParameter="{Binding .}"
                                       BackgroundColor="Transparent"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="20"
                                       Padding="0"/>

                                <Label Text="{Binding LikesCount, StringFormat='{0} likes'}"
                                      Style="{StaticResource PrimaryLabel}"
                                      VerticalOptions="Center"/>

                                <Label Text="{Binding CommentsCount, StringFormat='{0} comments'}"
                                      Style="{StaticResource SecondaryLabel}"
                                      VerticalOptions="Center"
                                      Margin="12,0,0,0"/>
                            </HorizontalStackLayout>

                            <!-- Caption -->
                            <Label Grid.Row="3"
                                  Text="{Binding Caption}"
                                  Style="{StaticResource PrimaryLabel}"
                                  LineBreakMode="WordWrap"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="12">
                    <Label Text="No posts yet!"
                          Style="{StaticResource PrimaryLabel}"
                          FontSize="20"
                          HorizontalOptions="Center"/>
                    <Label Text="Follow some users to see their posts here"
                          Style="{StaticResource SecondaryLabel}"
                          HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

        </CollectionView>
    </RefreshView>

</ContentPage>
